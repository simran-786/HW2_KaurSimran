<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/hugeInt1ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Huge Integer 1"
            android:inputType="number" />

        <EditText
            android:id="@+id/hugeInt2ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Huge Integer 2 "
            android:inputType="number" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAddNumbersButtonPressed"
            android:text="Sum the Numbers" />

        <TextView
            android:id="@+id/answertv"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Answer" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>